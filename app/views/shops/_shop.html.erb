<div class="card">
  <div class="card-header">
    <h4><%= shop.name %></h4>
    <% shop.tags.each do |tag| %>
      <span class="badge badge-primary"><%= tag.tag %></span>
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(shop.text) %></p>
    <p class="text-right font-weight-bold mr-10">作成者名</p>
  </div>
</div>

