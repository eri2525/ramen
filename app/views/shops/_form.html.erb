<%= render 'shared/error_messages' %>

<div class ="form-group">
<%= form_with(model: shop, local: true) do |f| %>
  
    <%= f.label :name, '店舗名' %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.label :images, '店舗画像' %>
    <%= f.file_field :images, multiple: true, class: 'form-control', placeholder: "Image Url" %>
    <%= f.label :text, 'コメント' %>
    <%= f.text_area :text, class: 'form-control', rows: 5 %>
</div>

  <div class="form-group">
    <span>タグ</span>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag) do |tag| %>
      <div class="form-check">
        <%= tag.label class: 'form-check-label' do %>
          <%= tag.check_box class: 'form-check-input' %>
          <%= tag.text %>
        <% end %>
      </div>
    <% end %>
  </div>

    <%= f.submit '登録', class: 'btn btn-primary' %>
<% end %>
